<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewsReaderController">
   <children>
      <HBox>
         <children>
            <VBox>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="News online for: " />
                        <Label fx:id="userName" />
                     </children>
                  </HBox>
                  <ListView fx:id="articleList" prefHeight="400.0" prefWidth="200.0" />
                  <ComboBox fx:id="categoryCombo" onAction="#changeCategory" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="300.0">
               <children>
                  <MenuButton fx:id="menuButton" mnemonicParsing="false" text="Menu">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#ClickLogin" text="Login" />
                      <MenuItem fx:id="newButton" mnemonicParsing="false" onAction="#ClickNew" text="New" />
                        <MenuItem fx:id="editButton" mnemonicParsing="false" onAction="#ClickEdit" text="Edit" />
                        <MenuItem fx:id="deleteButton" mnemonicParsing="false" onAction="#ClickDelete" text="Delete" />
                        <MenuItem mnemonicParsing="false" onAction="#ClickExit" text="Exit" />
                    </items>
                  </MenuButton>
                  <Label fx:id="articleName" text="Name of Article" />
                  <ImageView fx:id="articleImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <TextArea fx:id="articleBody" prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="ReadMoreButton" mnemonicParsing="false" onAction="#ClickObserve" text="Read more" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
