<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewsReaderController">
   <children>
      <HBox>
         <children>
            <VBox>
               <children>
                  <ListView fx:id="articleList" prefHeight="400.0" prefWidth="200.0" />
                  <ComboBox fx:id="categoryCombo" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="300.0">
               <children>
                  <Button fx:id="menuButton" mnemonicParsing="false" text="Menu" />
                  <Label fx:id="articleName" text="Name of Article" />
                  <TextArea fx:id="articleBody" prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" text="Read more" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
